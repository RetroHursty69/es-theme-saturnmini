<!--
theme name:     Saturn Mini 16:9
creator:		Dwayne Hurst (aka Hursty)
version:         1.0 NOV 2021
details:		This theme is designed to look best on a 16:9 monitor. Made for for king Rey.
-->

<?xml version="1.0" encoding="UTF-8"?>
<theme>
   <formatVersion>4</formatVersion>

<!--
Carousel wheel and main menu background
-->


<feature supported="carousel">
   <view name="system">
      <carousel name="systemcarousel">
        <zIndex>4</zIndex>	      
        <type>horizontal</type>
        <pos>0.0 0.0</pos>
        <size>1 1</size>
        <logoScale>1</logoScale>
        <logoSize>0.7 0.7</logoSize>
        <color>00000000</color>
        <maxLogoCount>3</maxLogoCount>
		<logoAlignment>center</logoAlignment>        
      </carousel> 
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>1</zIndex>                 
         <path>./_inc/images/background.png</path>
      </image>  	  
      <text name="systemInfo">     
         <pos>0.0 0.92</pos>
         <backgroundColor>00000000</backgroundColor>
         <color>363693</color>
         <fontPath>./_inc/fonts/NiseSegaSaturnU.TTF</fontPath>
	     <fontSize>0.065</fontSize>
         <zIndex>10</zIndex>	     
      </text>            
   </view>
</feature>


<!--
On Screen help
-->

   <view name="system">
      <helpsystem name="help">
         <fontPath>./_inc/fonts/NiseSegaSaturnU.TTF</fontPath>
         <fontSize>0.025</fontSize>     
         <pos>1.24 1.96</pos>      
         <textColor>363693</textColor>
         <iconColor>363693</iconColor>
      </helpsystem>
   </view>  
  
   <view name="basic,detailed,video">
      <helpsystem name="help">
         <fontPath>./_inc/fonts/NiseSegaSaturnU.TTF</fontPath>
         <fontSize>0.025</fontSize>     
         <pos>1.15 1.96</pos>      
         <textColor>363693</textColor>
         <iconColor>363693</iconColor>
      </helpsystem>
   </view> 
  
<!--
System Gamelist
--> 

   <view name="detailed,video">
      <textlist name="gamelist">
         <zIndex>6</zIndex>	      
         <selectorColor>1c1c1c00</selectorColor> 
	     <selectedColor>363693</selectedColor>     
         <pos>0.11 0.14</pos>
         <size>0.26 0.72</size>
         <primaryColor>8c8ce7</primaryColor>
         <secondaryColor>8c8ce7</secondaryColor>
         <fontPath>./_inc/fonts/NiseSegaSaturnU.TTF</fontPath>
         <fontSize>0.027</fontSize>
         <forceUppercase>1</forceUppercase>
         <scrollSound></scrollSound>
         <alignment>left</alignment>      
      </textlist>
   </view>   
    
   <view name="basic">
      <textlist name="gamelist">
         <zIndex>6</zIndex>	      
         <selectorColor>1c1c1c00</selectorColor> 
	     <selectedColor>363693</selectedColor>     
         <pos>0.11 0.14</pos>
         <size>0.41 0.72</size>
         <primaryColor>8c8ce7</primaryColor>
         <secondaryColor>8c8ce7</secondaryColor>
         <fontPath>./_inc/fonts/NiseSegaSaturnU.TTF</fontPath>
         <fontSize>0.027</fontSize>
         <forceUppercase>1</forceUppercase>
         <scrollSound></scrollSound>
         <alignment>left</alignment>      
      </textlist>
   </view> 	
	
